<div class="radios">
    <div class="switch">
        <input autocomplete="off"
               type="radio"
               class="switch-input switch-input-js"
               name="btn_switch_flight"
               value="1"
               id="raftobar">
        <label for="raftobar"
               class="switch-label switch-label-on">
            أجنبي
        </label>

        <input autocomplete="off"
               type="radio"
               class="switch-input switch-input-js"
               name="btn_switch_flight"
               value="2"
               checked=""
               id="raft">
        <label for="raft"
               class="switch-label switch-label-off">
            محلي
        </label>
        <span class="switch-selection"></span>
    </div>
</div>